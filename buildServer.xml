<?xml version="1.0"?>

<project name="Lucid Server" default="build">
	<property name="src.dir" value="src" />
	<property name="build.dir" value="bin" />
	<property name="jar.dir" value="build" />
	
	<path id="master-classpath">
		<fileset dir="libs">
			<include name="*.jar" />
		</fileset>
		<pathelement path="libs" />
	</path>
	
<!--	<path id="external.classpath">
		<pathelement location="libs/mysql/mysql-connector-java-5.1.27-bin.jar"/>
	</path> -->
	
	<manifestclasspath property="lib.list" jarfile="libs/mysql/mysql-connector-java-5.1.27-bin.jar">
		<classpath refid="master-classpath" />
	</manifestclasspath>
	
	<target name="build" description="Compile the source">
		<mkdir dir="${build.dir}" />
		<javac destdir="${build.dir}" source="1.5" target="1.5"
			debug="true" deprecation="false"
			optimize="false" failonerror="true" includeantruntime="false">
			<src path="${src.dir}" />
			<classpath>
				<path refid="master-classpath" />
			</classpath>
		</javac>
		
		<antcall target="build-jar" inheritAll="false" />
	</target>
	
	<target name="build-jar">
		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/lucid.jar" basedir="${build.dir}">
			<!--<manifest>
				<attribute name="Class-Path" value=". ${lib.list}" />
			</manifest>-->
		</jar>
	</target>
	
	<target name="clean" description="Clean build directory">
		<delete>
			<fileset dir="${build.dir}">
				<include name="**/*.class" />
			</fileset>
		</delete>
	</target>
</project>
